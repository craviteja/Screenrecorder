<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pronixinc.freescreenrecorder">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/screenlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pronixinc.freescreenrecorder.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name="com.pronixinc.freescreenrecorder.ListFilesActivity" />
        <activity
            android:name="com.pronixinc.freescreenrecorder.VideoPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name="com.pronixinc.freescreenrecorder.SplashActivity"
            android:theme="@style/AppThemee">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>